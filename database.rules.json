{
  "rules": {
    "gameRooms": {
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "players": {
          "$uid": {
            ".write": "auth != null && ($uid === auth.uid || data.parent().parent().child('hostId').val() === auth.uid)",
            "ready": {
              ".validate": "newData.isBoolean()"
            },
            "name": {
              ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 30"
            },
            "slot": {
              ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 9"
            }
          }
        },
        "status": {
          ".validate": "newData.isString() && (newData.val() === 'waiting' || newData.val() === 'playing' || newData.val() === 'finished')"
        },
        "hostId": {
          ".validate": "newData.isString()"
        },
        "code": {
          ".validate": "newData.isString() && newData.val().length === 6"
        }
      }
    },

    "games": {
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "actions": {
          "$actionId": {
            ".write": "auth != null",
            ".validate": "newData.hasChildren(['type', 'playerId', 'playerSlot', 'timestamp'])",
            "type": {
              ".validate": "newData.isString() && (newData.val() === 'playCard' || newData.val() === 'rob' || newData.val() === 'declineRob')"
            },
            "playerId": {
              ".validate": "newData.isString() && newData.val() === auth.uid"
            },
            "playerSlot": {
              ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 9"
            },
            "timestamp": {
              ".validate": "newData.isNumber()"
            }
          }
        }
      }
    },

    "publicRooms": {
      ".read": "auth != null",
      "$roomId": {
        ".write": "auth != null",
        ".validate": "newData.hasChildren(['code', 'hostName', 'numPlayers', 'currentPlayers', 'targetScore', 'createdAt'])",
        "code": {
          ".validate": "newData.isString() && newData.val().length === 6"
        },
        "hostName": {
          ".validate": "newData.isString()"
        },
        "numPlayers": {
          ".validate": "newData.isNumber() && newData.val() >= 2 && newData.val() <= 10"
        },
        "currentPlayers": {
          ".validate": "newData.isNumber() && newData.val() >= 1"
        },
        "targetScore": {
          ".validate": "newData.isNumber() && (newData.val() === 25 || newData.val() === 45)"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        }
      }
    },

    "presence": {
      "$roomId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && $uid === auth.uid",
          "online": {
            ".validate": "newData.isBoolean()"
          },
          "lastSeen": {
            ".validate": "newData.isNumber()"
          }
        }
      }
    },

    "users": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && $uid === auth.uid"
      }
    },

    "friendships": {
      "$friendshipId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },

    "notifications": {
      "$uid": {
        ".read": "auth != null && $uid === auth.uid",
        ".write": "auth != null"
      }
    }
  }
}
